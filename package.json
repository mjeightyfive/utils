{
    "name": "utils",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "configs/*",
        "ui/*"
    ],
    "scripts": {
        "clean": "rm -rf node_modules && npx --workspaces -c 'rm -rf node_modules'",
        "test": "turbo run test",
        "dev": "turbo run dev --parallel",
        "build": "turbo run build --parallel",
        "lint": "turbo run lint",
        "format": "prettier --write \"**/*.{js,jsx,md,css}\"",
        "update": "ncu",
        "changeset": "changeset",
        "release": "changeset publish"
    },
    "devDependencies": {
        "@changesets/cli": "2.21.0",
        "npm-check-updates": "12.4.0",
        "prettier": "^2.5.1",
        "turbo": "latest"
    },
    "engines": {
        "npm": ">=7.0.0",
        "node": ">=14.0.0"
    },
    "eslintConfig": {
        "env": {
            "jest": true
        }
    },
    "packageManager": "npm@8.4.0"
}
